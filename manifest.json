{
  "manifest_version": 3,
  "name": "Instagram Auto Scroll",
  "version": "1.0",
  "description": "Automatically scrolls through Instagram posts and reels with smart timing",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["*://*.instagram.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["content.js", "contentReel.js"]
    }
  ]
}